{
    "root": true,
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "strict": "warn",
        "semi": "error",
        "curly": "error",
        "no-console": "warn",
        "space-before-function-paren": "error",
        "space-in-parens": "error",
        "object-curly-spacing": ["error", "always"],
        "no-trailing-spaces": "error"
    }
}